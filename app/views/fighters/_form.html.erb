<div class="row">
  <%= form_for(@fighter, html: { multipart: true }) do |f| %>
  
    <%= render 'shared/error_communicat', object: f.object %>

    <div class="form-inputs">  
      <div class="field">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, class: "form-control input-sm" %>
      </div>
      
      <div class="field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, class: "form-control input-sm" %>
      </div>
      
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "form-control input-sm" %>
      </div>
      
      <div>
        <%= f.label :avatar %><br>
        <%= f.file_field :avatar %>
      </div>  
    </div>  
        
    <div class="form-action">
      <%= f.submit class: "btn btn-success" %>
    </div>
  
  <% end %>
</div>