<div class="skill-form">

  <h2>Add skill to <%= "#{@fighter.first_name} #{@fighter.last_name}" %></h2>
  <p class="skill">Each fighter should have from 2 to 9 skills to could fight</p>
  
  <div class="row">
    <%= form_for([@fighter, @skill]) do |f| %>
  
      <%= render 'shared/error_communicat', object: f.object %>

      <div class="form-inputs">  
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
      
        <div class="field">
          <%= f.label :level %><b>(0-5)</b><br>
          <%= f.text_field :level %>
        </div>     
      </div>  
        
      <div class="form-action">
        <%= f.submit "Add Skill", class: "btn btn-success" %>
      </div>
  
    <% end %>
  </div>  
</div>  
